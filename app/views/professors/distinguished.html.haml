.container.animated.mainContent
  .row
    .col.s12
      .card.white
        .card-content
          .valign-wrapper
            %span.card-title Award-Winning Professors
            %i.material-icons.pad-left-10 school
          .chip.center-div Award-Winning EECS Professors
          %table.centered
            %thead
              %tr
                %th{"data-field": "name"} Name
                %th{"data-field": "year"} Year
                %th{"data-field": "rating"} Average Rating (Out of 7)
            %tbody
              - @dist_eecs_profs.each do |prof|
                %tr
                  %td= link_to prof.name, professor_path(prof.id)
                  %td= prof.distinguishedYear
                  %td= prof.rating
          %br
          .chip.center-div Award-Winning Non-EECS Professors
          %table
            %thead
              %tr
                %th{"data-field": "name"} Name
                %th{"data-field": "award"} Award(s)
            %tbody
              - @awarded_hum_profs.each do |prof|
                %tr
                  %td= prof.name
                  %td= prof.all_awards
        .card-action
          %a{href: "/user"} Back